<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane fx:id="gamePane"
            prefHeight="700.0"
            prefWidth="750.0"
            stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.sudoku.controller.SudokuController">

    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>

    <!-- ENCABEZADO -->
    <top>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">

            <!-- Título con icono - MEJORADO -->
            <HBox alignment="CENTER" spacing="15" style="-fx-padding: 10;">
                <ImageView fitHeight="45.0" fitWidth="45.0" preserveRatio="true">
                    <image>
                        <Image url="https://cdn-icons-png.flaticon.com/512/2645/2645890.png" />
                    </image>
                </ImageView>

                <Label fx:id="gameTitle" text="Sudoku 6×6"
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Separador decorativo -->
            <Separator prefWidth="200.0"
                       style="-fx-background-color: #BDC3C7;" />

            <BorderPane.margin>
                <Insets bottom="10.0" />
            </BorderPane.margin>
        </VBox>
    </top>

    <!-- TABLERO CENTRAL -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">

            <!-- Grid del Sudoku -->
            <GridPane fx:id="sudokuGrid"
                      alignment="CENTER"
                      hgap="0.0"
                      vgap="0.0"
                      style="-fx-background-color: #2C3E50;
                             -fx-padding: 5;
                             -fx-background-radius: 10;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 15, 0, 0, 5);">
            </GridPane>

            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </VBox>
    </center>

    <!-- PIE DE PÁGINA CON CONTROLES -->
    <bottom>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">

            <!-- Contenedor de botones -->
            <HBox alignment="CENTER" spacing="20.0" styleClass="button-container">

                <!-- Botón Verificar -->
                <VBox alignment="CENTER" spacing="5">
                    <Button fx:id="checkButton"
                            onAction="#handleCheckBoard"
                            text="✓ Verificar"
                            styleClass="game-button"
                            style="-fx-background-color: linear-gradient(to bottom, #27AE60, #229954);
                                   -fx-text-fill: white;">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                    <Label text="Comprobar solución"
                           style="-fx-font-size: 10px; -fx-text-fill: #7F8C8D;" />
                </VBox>

                <!-- Botón Reiniciar -->
                <VBox alignment="CENTER" spacing="5">
                    <Button fx:id="restartButton"
                            onAction="#handleRestartGame"
                            text="↻ Reiniciar"
                            styleClass="game-button"
                            style="-fx-background-color: linear-gradient(to bottom, #F39C12, #E67E22);
                                   -fx-text-fill: white;">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                    <Label text="Nuevo tablero"
                           style="-fx-font-size: 10px; -fx-text-fill: #7F8C8D;" />
                </VBox>

                <!-- Botón Pista -->
                <VBox alignment="CENTER" spacing="5">
                    <Button fx:id="helpButton"
                            onAction="#handleHelpOption"
                            text="💡 Pista"
                            styleClass="game-button"
                            style="-fx-background-color: linear-gradient(to bottom, #9B59B6, #8E44AD);
                                   -fx-text-fill: white;">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Button>
                    <Label text="Obtener ayuda"
                           style="-fx-font-size: 10px; -fx-text-fill: #7F8C8D;" />
                </VBox>

            </HBox>

            <!-- Mensaje de estado -->
            <HBox alignment="CENTER"
                  style="-fx-background-color: rgba(236, 240, 241, 0.9);
                         -fx-background-radius: 12;
                         -fx-padding: 15;">
                <Label fx:id="messageLabel"
                       text="👆 Haz clic en una celda y usa las teclas 1-6 para jugar"
                       style="-fx-font-size: 14px;
                              -fx-font-weight: 600;
                              -fx-text-fill: #34495E;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </HBox>

            <BorderPane.margin>
                <Insets top="15.0" />
            </BorderPane.margin>
        </VBox>
    </bottom>

</BorderPane>